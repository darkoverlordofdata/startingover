{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                "src/entities.cpp",
                "src/game.cpp",
                "src/main.cpp",
                "src/systems.cpp",
                "-std=c++17", 
                "-O3",
                "-s", "WASM=1",
                "-s", "USE_SDL=2",
                "-s", "USE_SDL_IMAGE=2",
                "-s", "USE_SDL_MIXER=2",
                "-s", "USE_SDL_TTF=2",
                "-s", "SDL2_IMAGE_FORMATS=\'[\"png\"]\'",
                "-o", "docs/index.html",
                "--shell-file ", "src/index.html",
                "--preload-file", "assets"
            ],
            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
